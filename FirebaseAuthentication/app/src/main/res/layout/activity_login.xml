<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/login_head"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Login Page"
        android:layout_marginTop="50dp"
        android:textSize="50sp"
        android:background="@drawable/input_background"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#020201"
        />

    <EditText
        android:id="@+id/email_in"
        android:layout_below="@+id/login_head"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:background="@drawable/input_background"
        android:textSize="30sp"
        android:layout_margin="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        />

    <EditText
        android:id="@+id/password_in"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:background="@drawable/input_background"
        android:textSize="30sp"
        android:layout_margin="30dp"
        android:inputType="textPassword"
        android:layout_below="@+id/email_in"
        android:ems="10"
        />

    <Button
        android:id="@+id/submit_btn"
        android:layout_below="@id/password_in"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:text="Submit to Login."
        android:textSize="25sp"
        android:background="@drawable/button_back"/>

</RelativeLayout>